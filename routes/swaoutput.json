{
  "swagger": "2.0",
  "info": {
    "title": "My Ecommerce API",
    "description": "This is the api docummentation for my ecommerce api",
    "version": "1.0.0"
  },
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    },
    "oauth": {
      "type": "oauth2",
      "authorizationUrl": "http://localhost:3000/auth/google",
      "flow": "implicit",
      "scopes": {
        "post:user": "add a user",
        "read:user": "read a user data"
      }
    }
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/": {
      "get": {
        "description": "API home route",
        "parameters": [],
        "responses": {}
      }
    },
    "/products/": {
      "get": {
        "description": "Returns all products",
        "parameters": [],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "description": "Adds a new product",
        "parameters": [
          {
            "name": "product",
            "in": "body",
            "description": "New product",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Headset"
                },
                "description": {
                  "type": "string",
                  "example": "a product"
                },
                "category": {
                  "type": "string",
                  "example": "accessories"
                },
                "image": {
                  "type": "string",
                  "example": "images/headset.png"
                },
                "price": {
                  "type": "number",
                  "example": 78
                },
                "shipping": {
                  "type": "string",
                  "example": "free"
                },
                "upvotes": {
                  "type": "number",
                  "example": 0
                }
              },
              "required": ["name", "description", "category", "image", "price"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Product successfully added"
          },
          "422": {
            "description": "Kindly check the provided data"
          }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "description": "Returns product by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Product successfully obtained"
          },
          "422": {
            "description": "Kindly check the provided Id"
          }
        }
      },
      "put": {
        "description": "Update an existing product",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "product",
            "in": "body",
            "description": "Existing product",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Headset"
                },
                "description": {
                  "type": "string",
                  "example": "a product"
                },
                "category": {
                  "type": "string",
                  "example": "accessories"
                },
                "image": {
                  "type": "string",
                  "example": "images/headset.png"
                },
                "price": {
                  "type": "number",
                  "example": 78
                },
                "shipping": {
                  "type": "string",
                  "example": "free"
                },
                "upvotes": {
                  "type": "number",
                  "example": 0
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Product successfully Updated"
          },
          "422": {
            "description": "Kindly check the provided data"
          }
        }
      },
      "delete": {
        "description": "Delete an existing product",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Product successfully Deleted"
          },
          "422": {
            "description": "Kindly check the provided Id"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "description": "Returns user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "User successfully obtained"
          },
          "422": {
            "description": "Kindly check the provided Id"
          }
        },
        "security": [{ "oauth": ["post:user"] }]
      }
    },
    "/users/": {
      "post": {
        "description": "Adds a new User",
        "parameters": [
          {
            "name": "User",
            "in": "body",
            "description": "New User",
            "schema": {
              "type": "object",
              "properties": {
                "firstname": {
                  "type": "string",
                  "example": "New"
                },
                "lastname": {
                  "type": "string",
                  "example": "User"
                },
                "email": {
                  "type": "string",
                  "example": "accessories@gmail.com"
                },
                "password": {
                  "type": "string",
                  "example": "test1245?"
                }
              },
              "required": ["firstname", "lastname", "email", "password"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User successfully added"
          },
          "422": {
            "description": "Kindly check the provided data"
          }
        },
        "security": [{ "oauth": ["post:user"] }]
      }
    }
  }
}
